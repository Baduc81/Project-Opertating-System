+sys_sysinfo(void)
+{
+  struct proc *p = myproc();  // Get current progress information.
+  struct sysinfo info;        // Create a struct to save information.
+  uint64 info_addr;           // user pointer to struct stat
+
+  argaddr(0, &info_addr);
+
+  info.freemem = free_memory();
